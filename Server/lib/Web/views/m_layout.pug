include module

- if(LANG == undefined) LANG = locals.locale;

doctype html
html
	head
		block Subject
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0,maximum-scale=1.0, user-scalable=no')
		script(type='text/javascript').
			function getObject(v, i) {
				Object.defineProperty(v, i, {value: v[i], writable: false});
			}
			getObject(window.WebSocket, "send");
			getObject(window.WebSocket, "onmessage");
			getObject(window, "WebSocket");

		block Search
			meta(name='description', content=LANG['meta_desc'] || L('META_DESC'))
			meta(name='keywords', content=LANG['meta_keys'] || L('META_KEYS'))

		block OpenGraph
			meta(property='og:image', content=locals.ogImage || "http://JJo.kr/img/ogImage.png")
			meta(property='og:url', content=locals.ogURL || "http://bssmkkutu.kro.kr/")
			meta(property='og:title', content=locals.ogTitle || "부마끄투 - 학교에서 언제나, 어디서나")
			meta(property='og:description', content=locals.ogDescription || "학교에서 자유롭게 끄투를 즐겨보세요")

		+PageHead()
			block Preload
		block CSS
		block JS

	body(style='min-width: 200px;')
		div#Top
			+MMenu()
			div#global-notice
				div#gn-content
					include ../public/global_notice.html
			block Top
		div#Jungle
			span#mobile= locals.mobile
			span#summonerID= DATA._id
			img#Background(src='/img/bg/' + (locals.m_bg || 'def.png'))
			block Jungle
		div#Middle
			block Middle
		div#Bottom
			block Bottom
			div.bottom-legal
				a(href='?pc=true')= L('AS_PC')
				br
				a.bottom-contact(href='http://discord.gg/9unPAN9h8J', target='_blank')= L('CREATOR')
				a.bottom-contact(href='mailto:op@jjo.kr', target='_blank') Contact op@jjo.kr
			div.bottom-legal!= L('GPL')
			+separator(40)